<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgFimes"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pulp_fiction"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tituloFilme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Filme"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/imgFimes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:id="@+id/descricaoFilme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descrição do filme"
        android:textSize="16sp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/tituloFilme"
        app:layout_constraintStart_toEndOf="@id/imgFimes"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/diretorFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diretor"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/descricaoFilme"
        app:layout_constraintStart_toEndOf="@id/imgFimes"
        />

    <TextView
        android:id="@+id/anoFilme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ano"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/diretorFilme"
        app:layout_constraintStart_toEndOf="@id/imgFimes"
        />


</androidx.constraintlayout.widget.ConstraintLayout>